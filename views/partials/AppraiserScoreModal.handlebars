<form
  class="relative z-10 m-0 p-0 inline-block hidden"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  id="{{id}}"
  action={{href}}
  method="POST"
>
  <div
    class="fixed inset-0 bg-secundaryHover bg-opacity-75 transition-opacity"
  ></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div
      class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0"
    >
      <div
        class="relative flex flex-col  justify-between transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all w-2/4 h-96"
      >
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 flex flex-col text-center sm:ml-4 sm:mt-0 sm:text-left">
              <h3 class="font-semibold leading-6" id="modal-title">Avaliar artigo</h3>
              <div class="mt-7 flex space-x-3">
                {{> Input class="w-96" description="Nota experiência" name="experienceScore" value=appraiser.experienceScore }}
                {{> Input class="w-96" description="Nota relevância" name="relevantScore" value=appraiser.relevantScore }}
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          {{> button class="sm:ml-3" text="Salvar" onClick="onConfirm()"}}
          <button 
            onclick="onCancel()"
            type="button"
            class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
          >Cancel</button>
        </div>
      </div>
    </div>
  </div>
</form>
<script>

  var idMainContainerTemplate = Handlebars.compile(`{{id}}`)
  var value = idMainContainerTemplate({});
  console.log( value )

  function onCancel() { 
    document.getElementById(value).classList.toggle("hidden") 
  }

  function onConfirm() {
    document.getElementById(value).classList.toggle("hidden") 
  }
</script>
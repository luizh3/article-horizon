<form
  class="relative z-10 m-0 p-0 inline-block w-full hidden"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  id="{{id}}"
  action={{href}}
  method="POST"
>
  <div
    class="fixed inset-0 bg-secundaryHover bg-opacity-75 transition-opacity"
  ></div>

    <div
      class="fixed inset-0 z-10 overflow-y-auto w-full flex items-end justify-center p-4 text-center sm:items-center sm:p-0"
    >
      <div
        class="relative flex flex-col justify-between transform overflow-hidden rounded-lg bg-white p-6 text-left shadow-xl transition-all w-2/4 h-2/4"
      >
        <div class="">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 flex flex-col text-center sm:mt-0 sm:text-left w-full">
              <h3 class="font-semibold leading-6" id="modal-title">Avaliar artigo</h3>
              <div class="mt-7 flex space-x-3 w-full">
                {{> Input 
                class="grow" 
                description="Nota experiência" 
                name="experienceScore"
                value=appraiser.experienceScore 
                pattern=inputRegex 
                type="number"
                required=true
                step="0.01"
                }}
                {{> Input 
                class="grow" 
                description="Nota relevância" 
                name="relevantScore" 
                value=appraiser.relevantScore 
                pattern=inputRegex 
                type="number"
                required=true
                step="0.01"
                }}
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 py-3 sm:flex sm:flex-row-reverse flex flex-end">
          {{> button class="sm:ml-3" text="Salvar" onClick="onConfirm()"}}
          {{> button text="Cancelar" width="sm:w-auto" bgColor="bg-white" textColor="text-black" class="ring-1" onClick="onCancel()" }}
        </div>
      </div>
    </div>
</form>
<script>

  var idMainContainerTemplate = Handlebars.compile(`{{id}}`)
  var value = idMainContainerTemplate({});

  function onCancel() { 
    document.getElementById(value).classList.toggle("hidden") 
  }

  function onConfirm() {
    document.getElementById(value).classList.toggle("hidden") 
  }
</script>
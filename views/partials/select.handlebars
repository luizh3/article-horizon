<div class="flex flex-col {{class}}">
  {{#if showLabel }}
     <label for="type" class="block text-sm font-medium leading-6 text-gray-900">
    {{description}}
  </label>
  {{/if}}
  <select
    name={{name}}
    class="appearance-none mt-2 ring-1 ring-inset border-0 rounded row-start-1 col-start-1 bg-slate-50 dark:bg-slate-800 ..."
    required
  >
    {{#if defaultOption}}
      <option value="-1" selected disabled hidden>{{defaultDescription}}</option>
    {{/if}}

    {{#each options}}
      <option {{#if selected}} selected="selected"{{/if}} value={{id}}>{{description}}</option>
    {{/each}}
    
  </select>
</div>
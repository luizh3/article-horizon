<ul class="flex flex-col space-y-4 w-2/4 h-full">
  {{#each users}}
    <li
      class="flex col-span-full cursor-pointer p-5 h-32 rounded shadow-md hover:bg-secundary bg-white items-center justify-between"
    >
      <div class="flex flex-col col-span-full space-y-4 justify-center">
        <div class="text-2xl">{{name}}</div>
        <div class="text-sm line-clamp-4">{{email}}</div>
        <div class="text-sm line-clamp-4">{{type}}</div>
      </div>
      <div class="flex flex-col space-y-3">
        <a
          class="cursor-pointer text-primary"
          href="/user/update/{{id}}"
        >Editar</a>
        <a
          class="cursor-pointer text-remove"
          href="/user/delete/{{id}}"
        >Remover</a>
      </div>
    </li>
  {{/each}}
</ul>
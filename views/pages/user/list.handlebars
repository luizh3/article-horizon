<div class="flex flex-col space-y-4 w-2/4 h-full min-w-min">
  <div>
    <form action="/user/list" method="GET">
      {{> SearchField placeHolder="Buscar por nome..." value=filters.user.search }}
      <div class="flex items-end space-x-3">
        {{> select 
        options=filters.user.types 
        description="Função do usuario"
        class="grow"
        name="typeUser"
        defaultOption=true
        defaultDescription="Tipo usuario"}}
        {{> button text="Buscar" }}
      </div>
     </form>
  </div>
<ul class="flex flex-col space-y-4">
  {{#each users}}
    <li
      class="flex col-span-full p-5 h-42 rounded shadow-md hover:bg-slate200 bg-white items-center justify-between"
    >
      <div class="flex flex-col col-span-full space-y-4 justify-center">
        <div class="text-2xl font-medium text-black/80">{{name}}</div>
        <div class="text-sm line-clamp-4">{{email}}</div>
        {{> Badge description=type class="bg-primary text-white"}}
      </div>
      <div class="flex flex-col space-y-3">
        <a
          class="cursor-pointer text-primary"
          href="/user/update/{{id}}"
        >Editar</a>
        <a
          class="cursor-pointer text-remove"
          href="/user/delete/{{id}}"
        >Remover</a>
      </div>
    </li>
  {{/each}}
</ul>
</div>